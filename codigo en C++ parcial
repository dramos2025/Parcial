#include <iomanip>   // Para formatear la salida con dos decimales
#include <iostream>  // Para entrada y salida estándar

int main() {
  // Variable para almacenar la distancia al objetivo
  double distancia_objetivo;

  // Solicitar al usuario la distancia al objetivo
  std::cout << "Introduce la distancia al objetivo (metros): ";
  std::cin >> distancia_objetivo;

  // Validar que la distancia sea un número positivo
  if (distancia_objetivo <= 0) {
    std::cout << "La distancia debe ser un número positivo." << std::endl;
    return EXIT_FAILURE;  // Indicar que el programa terminó con error
  }

  // Velocidades de los proyectiles (constantes)
  const double kVelocidadFuego = 120.0;  // Velocidad del proyectil de Fuego (m/s)
  const double kVelocidadHielo = 100.0;  // Velocidad del proyectil de Hielo (m/s)
  const double kVelocidadVeneno = 80.0;  // Velocidad del proyectil de Veneno (m/s)

  // Calcular el tiempo de impacto para cada proyectil
  double tiempo_fuego = distancia_objetivo / kVelocidadFuego;
  double tiempo_hielo = distancia_objetivo / kVelocidadHielo;
  double tiempo_veneno = distancia_objetivo / kVelocidadVeneno;

  // Mostrar los resultados con dos decimales de precisión
  std::cout << std::fixed << std::setprecision(2);

  // Mostrar el tiempo de impacto para cada proyectil
  std::cout << "Tiempo de impacto (Fuego): " << tiempo_fuego << " segundos" << std::endl;
  std::cout << "Tiempo de impacto (Hielo): " << tiempo_hielo << " segundos" << std::endl;
  std::cout << "Tiempo de impacto (Veneno): " << tiempo_veneno << " segundos" << std::endl;

  return EXIT_SUCCESS;  // Indicar que el programa terminó correctamente
}
